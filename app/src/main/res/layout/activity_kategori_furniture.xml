<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KategoriFurniture"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@drawable/back"/>

        <TextView
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Furniture"
            android:textSize="23sp"
            android:textAlignment="center"
            android:layout_weight="13"
            android:fontFamily="@font/strait"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/kategorikursi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/kursi"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="5dp"
                            android:alpha="0.75"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chair"
                            android:fontFamily="@font/strait"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/kategorirakbuku"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/rakbuku"
                            android:scaleType="centerCrop"
                            android:layout_marginLeft="5dp"
                            android:alpha="0.75"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bookshelf"
                            android:fontFamily="@font/strait"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/kategorilemari"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/lemari"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="5dp"
                            android:alpha="0.75"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wardrobe"
                            android:fontFamily="@font/strait"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/kategorimeja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/meja"
                            android:scaleType="centerCrop"
                            android:layout_marginLeft="5dp"
                            android:alpha="0.75"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Table"
                            android:fontFamily="@font/strait"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/bagiankategori"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:background="#E0FFFF"
                    android:id="@+id/kategori"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Popular Product"
                        android:textSize="18sp"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/strait"/>
                </LinearLayout>
                <LinearLayout
                    android:padding="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:id="@+id/item1"
                    android:layout_below="@id/kategori">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_launcher_background"/>

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_marginLeft="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Minimalis Chair"
                            android:fontFamily="@font/strait"
                            android:textSize="22sp"/>

                        <TextView
                            android:fontFamily="@font/strait"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prize : Rp. 100.000\n"
                            android:textSize="18sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/strait"
                            android:text="By Newbie"/>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/item2"
                    android:padding="13dp"
                    android:layout_below="@id/item1"
                    android:layout_width="match_parent"
                    android:layout_height="130dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_launcher_background"/>
                    <LinearLayout
                        android:padding="5dp"
                        android:layout_marginLeft="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Minimalis Chair"
                            android:fontFamily="@font/strait"
                            android:textSize="22sp"/>
                        <TextView
                            android:fontFamily="@font/strait"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prize : Rp. 100.000\n"
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/strait"
                            android:text="By Newbie"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/item3"
                    android:padding="13dp"
                    android:layout_below="@id/item2"
                    android:layout_width="match_parent"
                    android:layout_height="130dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_launcher_background"/>
                    <LinearLayout
                        android:padding="5dp"
                        android:layout_marginLeft="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Minimalis Chair"
                            android:fontFamily="@font/strait"
                            android:textSize="22sp"/>

                        <TextView
                            android:fontFamily="@font/strait"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prize : Rp. 100.000\n"
                            android:textSize="18sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/strait"
                            android:text="By Newbie"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/item4"
                    android:padding="13dp"
                    android:layout_below="@id/item3"
                    android:layout_width="match_parent"
                    android:layout_height="130dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_launcher_background"/>

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_marginLeft="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Minimalis Chair"
                            android:fontFamily="@font/strait"
                            android:textSize="22sp"/>
                        <TextView
                            android:fontFamily="@font/strait"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prize : Rp. 100.000\n"
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/strait"
                            android:text="By Newbie"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/item5"
                    android:padding="13dp"
                    android:layout_below="@id/item4"
                    android:layout_width="match_parent"
                    android:layout_height="130dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_launcher_background"/>
                    <LinearLayout
                        android:padding="5dp"
                        android:layout_marginLeft="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Minimalis Chair"
                            android:fontFamily="@font/strait"
                            android:textSize="22sp"/>
                        <TextView
                            android:fontFamily="@font/strait"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prize : Rp. 100.000\n"
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/strait"
                            android:text="By Newbie"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>